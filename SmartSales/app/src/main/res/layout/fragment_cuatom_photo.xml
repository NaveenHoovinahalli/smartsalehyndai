<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@+id/relativeLayout2"
        android:layout_toStartOf="@+id/relativeLayout2">

    </FrameLayout>
        <ImageView android:id="@+id/photo_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/photo_focus"
            android:layout_gravity="center"
            android:layout_marginRight="416dp"
            android:layout_marginEnd="416dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/relativeLayout2"
            android:layout_toStartOf="@+id/relativeLayout2" />

    <RelativeLayout
        android:layout_width="225dp"
        android:layout_height="719dp"
        android:background="@drawable/photo_btn_bg"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayout2">

        <ImageButton android:id="@+id/photo_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="69dp"
            android:layout_marginBottom="75dp"
            android:src="@android:color/transparent"
            android:background="@drawable/btn_photo_mode0"
            android:layout_centerHorizontal="true"/>

        <ImageButton android:id="@+id/photo_shutter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_mode"
            android:src="@android:color/transparent"
            android:background="@drawable/btn_photo_shutter"
            android:layout_centerHorizontal="true"/>

        <ImageButton android:id="@+id/photo_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_shutter"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="10dp"
            android:src="@android:color/transparent"
            android:background="@drawable/btn_photo_album"
            android:layout_centerHorizontal="true"/>

        <ImageButton android:id="@+id/photo_thema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_album"
            android:src="@android:color/transparent"
            android:background="@drawable/btn_photo_thema"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/photo_view_layout"
        android:layout_width="1055dp"
        android:layout_height="719dp"
        android:layout_alignParentLeft="true"
        android:visibility="gone">

        <LinearLayout android:id="@+id/photo_btn_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="90dp">

            <ImageButton android:id="@+id/btn_retry"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@android:color/transparent"
                android:background="@drawable/photo_btn_retry"
                android:layout_marginRight="52dp" />

            <ImageButton android:id="@+id/btn_facebook"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@android:color/transparent"
                android:background="@drawable/photo_btn_share" />

            <ImageButton android:id="@+id/btn_delete"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@android:color/transparent"
                android:background="@drawable/photo_btn_delete"
                android:layout_marginLeft="52dp" />



        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>