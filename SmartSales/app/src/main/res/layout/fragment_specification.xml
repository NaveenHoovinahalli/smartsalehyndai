<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_consultation"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/specification_pager"
        android:layout_width="930dp"
        android:layout_height="fill_parent"
        android:isScrollContainer="true"
       />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_toRightOf="@+id/specification_pager"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/specification_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#3f3f3f"
            android:src="@drawable/spec_list_view_top_bar"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            />

        <ListView
            android:id="@+id/specification_list"
            android:layout_below="@+id/specification_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#3f3f3f"
            android:layout_marginTop="10dp"
            android:dividerHeight="8dp"
            />

    </RelativeLayout>





</RelativeLayout>