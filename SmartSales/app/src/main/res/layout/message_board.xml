<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.Toolbar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_bar_bg"
        android:id="@+id/view">
    </android.support.v7.widget.Toolbar>


    <ImageView
        android:id="@+id/catalogueMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/view" />

    <com.hyundai.teli.smartsales.views.HTextView
        android:id="@+id/hyundai_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MESSAGE BOARD"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:background="@drawable/action_bar_bg"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/catalogueMenu"
        android:layout_toRightOf="@+id/catalogueMenu"
        android:layout_toEndOf="@+id/catalogueMenu"
        android:paddingLeft="15dp"/>


    <LinearLayout
        android:id="@+id/linear_header"
        android:layout_below="@+id/view"
        android:layout_width="1150dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:background="#D3D3D3"
        android:layout_centerInParent="true"
        >
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#bdbdbd"
            />
        <com.hyundai.teli.smartsales.views.HTextView
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:text="no"
            android:textColor="#000000"
            android:gravity="center"
           />
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#bdbdbd"
            />
        <com.hyundai.teli.smartsales.views.HTextView
            android:layout_width="650dp"
            android:layout_height="fill_parent"
            android:text="Title"
            android:textColor="#000000"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#bdbdbd"
            />
        <com.hyundai.teli.smartsales.views.HTextView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:text="Date"
            android:textColor="#000000"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#bdbdbd"
            />
        <com.hyundai.teli.smartsales.views.HTextView
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:text="Select"
            android:textColor="#000000"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#bdbdbd"
            />
        </LinearLayout>
    <View
        android:layout_width="1150dp"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        />
    <ListView
        android:id="@+id/list_message"
        android:layout_below="@id/linear_header"
        android:layout_width="1150dp"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        />

    <include layout="@layout/menu_layout"/>
    </RelativeLayout>

