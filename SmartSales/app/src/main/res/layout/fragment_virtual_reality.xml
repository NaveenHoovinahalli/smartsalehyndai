<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vr_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_vr">

    <com.andexert.library.RippleView
        android:id="@+id/vr_play_ripple"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/vr_flipper"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/vr_flipper"
        android:layout_margin="10dp"
        ripple:rv_type="doubleRipple">

        <ImageButton
            android:id="@+id/vr_play"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/vr_play_square" />

    </com.andexert.library.RippleView>

    <ViewFlipper
        android:id="@+id/vr_flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/vr_play_ripple">
    </ViewFlipper>
    <ImageButton
        android:id="@+id/btn_vr_interior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_inside"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:id="@+id/colorPalletLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/colorPallet0"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"
        />
        <!--android:scaleType="fitXY"-->
        <ImageView
            android:id="@+id/colorPallet1"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/colorPallet2"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/colorPallet3"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/colorPallet4"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/colorPallet5"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/colorPallet6"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/colorPallet7"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/colorPallet8"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/colorPallet9"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/colorPallet10"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>