<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hyundai.teli.smartsales.activities.Home">
    <!--android:background="@drawable/bg_consultation"-->


    <android.support.v7.widget.Toolbar
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/hyundai_bar"
        android:layout_toRightOf="@+id/hyundai_bar"
        android:background="@drawable/action_bar_bg">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <com.andexert.library.RippleView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                ripple:rv_type="doubleRipple">

                <com.hyundai.teli.smartsales.views.HTextView
                    android:id="@+id/nde_video"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="NDE VIDEO"
                    android:textColor="@android:color/white" />

            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                ripple:rv_type="doubleRipple">

                <com.hyundai.teli.smartsales.views.HTextView
                    android:id="@+id/nde_dealer_vision"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="DEALER VISION AND MISSION"
                    android:textColor="@android:color/white" />

            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                ripple:rv_type="doubleRipple">

                <com.hyundai.teli.smartsales.views.HTextView
                    android:id="@+id/nde_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="NDE SALES PROCESS"
                    android:textColor="@android:color/white" />

            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                ripple:rv_type="doubleRipple">

                <com.hyundai.teli.smartsales.views.HTextView
                    android:id="@+id/nde_dealership_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="NEW DEALERSHIP EXPERIENCE"
                    android:textColor="@android:color/white" />

            </com.andexert.library.RippleView>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/catalogueMenu"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_alignBottom="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/menu_icon" />

    <com.hyundai.teli.smartsales.views.HTextView
        android:id="@+id/hyundai_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/catalogueMenu"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/catalogueMenu"
        android:layout_toRightOf="@+id/catalogueMenu"
        android:background="@drawable/action_bar_bg"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:text="NEW DEALERSHIP EXPERIENCE"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/catalogueMenu"></android.support.v4.view.ViewPager>

</RelativeLayout>
