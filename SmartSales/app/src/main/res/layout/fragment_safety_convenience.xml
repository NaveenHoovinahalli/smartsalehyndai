<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_consultation"
    android:weightSum="3"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/safety_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       android:layout_weight="1">

       </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <LinearLayout
            android:id="@+id/safety_main_names_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <ImageButton
                android:id="@+id/safety_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/btn_safety_select"
                android:background="#3f3f3f"
                android:scaleType="fitXY"
                android:layout_marginRight="5dp"

                />
            <ImageButton
                android:id="@+id/convenience_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/btn_conv_normal"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:background="#3f3f3f"
                />
            </LinearLayout>

        <ListView
            android:id="@+id/safety_list"
            android:layout_below="@id/safety_main_names_ll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:dividerHeight="8dp"
            android:layout_marginTop="8dp"
                    />

        </RelativeLayout>

</LinearLayout>